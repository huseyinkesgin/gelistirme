{
  "name": "emlak-portfoy-yonetim-sistemi",
  "version": "1.0.0",
  "description": "Emlak portföy yönetim sistemi - Electron.js tabanlı masaüstü uygulaması",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:main": "tsc -p tsconfig.main.json && electron dist/main/main.js",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build:all": "npm run build && electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.vue",
    "lint:fix": "eslint src --ext .ts,.vue --fix",
    "migrate:latest": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "seed:run": "knex seed:run"
  },
  "keywords": [
    "emlak",
    "portföy",
    "yönetim",
    "electron",
    "vue",
    "typescript"
  ],
  "author": "Emlak Portföy Yönetim Sistemi",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.6.3",
    "@types/sqlite3": "^3.1.11",
    "@types/uuid": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/test-utils": "^2.4.1",
    "autoprefixer": "^10.4.15",
    "concurrently": "^8.2.1",
    "electron": "^37.3.0",
    "electron-builder": "^24.6.4",
    "eslint": "^9.33.0",
    "eslint-plugin-vue": "^9.17.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.29",
    "sqlite3": "^5.1.7",
    "tailwindcss": "^3.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "vite": "^7.1.2",
    "vue-tsc": "^3.0.5"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.16",
    "@heroicons/vue": "^2.0.18",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "electron-is-dev": "^2.0.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "knex": "^2.5.1",
    "lodash-es": "^4.17.21",
    "mysql2": "^3.6.1",
    "objection": "^3.1.5",
    "pinia": "^2.1.6",
    "uuid": "^9.0.0",
    "vue": "^3.3.4",
    "vue-router": "^4.2.5"
  },
  "build": {
    "appId": "com.emlak.portfoy.yonetim",
    "productName": "Emlak Portföy Yönetim Sistemi",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
